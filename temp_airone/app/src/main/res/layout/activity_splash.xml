<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/intro_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.42"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33dp"
            android:layout_gravity="center_horizontal"
            android:textSize="12dp"
            android:textColor="#8c8c8c"
            android:text="@string/copyright"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_update_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="36dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_update_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_update_textview1"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/app_update_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_update_textview2"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/app_update_text1"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/app_update_confirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="확인"
                android:textColor="#fff"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_confirm"
                android:textSize="15dp"
                android:layout_below="@+id/app_update_text2"
                android:layout_marginTop="48dp"/>

            <TextView
                android:id="@+id/app_update_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_update_textview3"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
