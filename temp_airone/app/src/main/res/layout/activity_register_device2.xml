<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:context=".activity.register.RegisterDevice2Activity">

    <RelativeLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:scaleType="center"
            app:srcCompat="@drawable/icon_header_back" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/header_step1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/page_n1"/>
            <View
                android:id="@+id/header_step_divider1"
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/divider_header_step"/>
            <ImageView
                android:id="@+id/header_step2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/page_n2"/>
            <View
                android:id="@+id/header_step_divider2"
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/divider_header_step"/>
            <ImageView
                android:id="@+id/header_step3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/page_n3"/>
            <View
                android:id="@+id/header_step_divider3"
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/divider_header_step"/>
            <ImageView
                android:id="@+id/header_step4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/page_n4"/>
        </LinearLayout>
    </RelativeLayout>

    <kr.co.kdone.airone.components.NonSwipeableViewPager
        android:id="@+id/pagerRegisterDevice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutActionBar"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>