<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="34.6dp"
        android:layout_marginStart="16.6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="109dp"
            android:layout_height="8dp"
            android:src="@drawable/widget_android_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/txtInside"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:background="@drawable/bg_popup_title_box"
                android:text="@string/inside"
                android:textColor="#ffffff"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/txtLocationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6.6dp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgReplace"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:scaleType="center"
            android:src="@drawable/wedget_android_btn_replace" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21.6dp"
            android:layout_marginBottom="21.6dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/layoutOnOff"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgOnOff"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/widget_logo" />

                <TextView
                    android:id="@+id/txtOnOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.3dp"
                    android:text="@string/layout_widget_new_str_1"
                    android:textAlignment="center"
                    android:textColor="#011b6a"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layouttotal"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_widget_total"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_widget_total_circle" />

                    <TextView
                        android:id="@+id/text_widget_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/txt_widget_OnOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.3dp"
                    android:text="@string/layout_widget_new_str_15"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dddddd">
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/base_pm1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/layout_widget_new_str_16"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp" />

                    <ImageView
                        android:id="@+id/inside_pm1_level_0"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_small"/>

                    <ImageView
                        android:id="@+id/inside_pm1_level_1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_main_circle_good_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_pm1_level_2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_main_circle_normal_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_pm1_level_3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_main_circle_bad_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_pm1_level_4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_main_circle_very_bad_small"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_inside_pm1_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/unknown"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12.6dp"/>

                    <TextView
                        android:id="@+id/text_inside_pm1_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.6dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/layout_widget_new_str_3"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp" />

                    <ImageView
                        android:id="@+id/inside_pm25_level_0"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_small"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/inside_pm25_level_1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_good_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_pm25_level_2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_normal_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_pm25_level_3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_bad_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_pm25_level_4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_very_bad_small"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_inside_pm25_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/unknown"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12.6dp"/>

                    <TextView
                        android:id="@+id/text_inside_pm25_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.6dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/layout_widget_new_str_4"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp" />

                    <ImageView
                        android:id="@+id/inside_co2_level_0"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_small"/>

                    <ImageView
                        android:id="@+id/inside_co2_level_1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_good_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_co2_level_2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_normal_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_co2_level_3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_bad_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_co2_level_4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_very_bad_small"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_inside_co2_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/unknown"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12.6dp"/>

                    <TextView
                        android:id="@+id/text_inside_co2_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.6dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/layout_widget_new_str_5"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp" />

                    <ImageView
                        android:id="@+id/inside_tvoc_level_0"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_small"/>

                    <ImageView
                        android:id="@+id/inside_tvoc_level_1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_good_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_tvoc_level_2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_normal_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_tvoc_level_3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_bad_small"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/inside_tvoc_level_4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/icon_main_circle_very_bad_small"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/text_inside_tvoc_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/unknown"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="12.6dp"/>

                    <TextView
                        android:id="@+id/text_inside_tvoc_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.6dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="10.6dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/text_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/layout_widget_new_str_14"
                android:textColor="#3C3C3C"
                android:textSize="13.3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>