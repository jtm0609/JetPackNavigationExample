<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutCurrontLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIconLocation"
                android:layout_width="10.6dp"
                android:layout_height="16.6dp"
                app:srcCompat="@drawable/free_icon_main_location_pin" />

            <TextView
                android:id="@+id/txtCurrentLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/fragment_home_first_str_1"
                android:textColor="#646464"
                android:textSize="12.3dp" />

            <ImageView
                android:id="@+id/imgInfoAir"
                android:layout_width="16.6dp"
                android:layout_height="16.6dp"
                app:srcCompat="@drawable/free_btn_info_airkorea" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/temp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgWeather"
                android:layout_width="37.3dp"
                android:layout_height="33.3dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/free_icon_main_weather01"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <kr.co.kdone.airone.components.NoPaddingTextView
                    android:id="@+id/txtWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sunny"
                    android:textColor="#000000"
                    android:textSize="13.3dp"
                    android:layout_gravity="top"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8.6dp">

                    <LinearLayout
                        android:id="@+id/layout_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom">

                        <kr.co.kdone.airone.components.NoPaddingTextView
                            android:id="@+id/txtOutsideTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="16.6dp" />

                        <ImageView
                            android:id="@+id/imgOutsideTempIcon"
                            android:layout_width="6.3dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="2.6dp"
                            android:layout_marginTop="3dp"
                            app:srcCompat="@drawable/free_main_out_temp" />

                        <FrameLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="2dp"
                            android:background="#d7dade" />

                        <kr.co.kdone.airone.components.NoPaddingTextView
                            android:id="@+id/txtOutsideHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="16.6dp" />

                        <ImageView
                            android:id="@+id/imgOutsideHumiIcon"
                            android:layout_width="7.3dp"
                            android:layout_height="6dp"
                            android:layout_marginLeft="2.6dp"
                            android:layout_marginTop="3dp"
                            app:srcCompat="@drawable/free_main_out_hum" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <kr.co.kdone.airone.components.NoPaddingTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_home_first_str_2"
                    android:textSize="12.3dp"
                    android:textColor="#282828"
                    android:layout_gravity="center_horizontal|top"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <View
                        android:id="@+id/outside_pm25"
                        android:layout_width="10.6dp"
                        android:layout_height="10.6dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/icon_main_circle_small"/>

                    <TextView
                        android:id="@+id/text_outside_pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginBottom="-1dp"
                        android:text="@string/unknown"
                        android:textColor="@color/text_color_unknown"
                        android:textSize="13.3dp" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="21.3dp"
                android:layout_marginRight="21.3dp"
                android:background="#d7dade"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <kr.co.kdone.airone.components.NoPaddingTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_home_first_str_3"
                    android:textSize="12.3dp"
                    android:textColor="#282828"
                    android:layout_gravity="center_horizontal|top"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <View
                        android:id="@+id/outside_pm10"
                        android:layout_width="10.6dp"
                        android:layout_height="10.6dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/icon_main_circle_small"/>

                    <TextView
