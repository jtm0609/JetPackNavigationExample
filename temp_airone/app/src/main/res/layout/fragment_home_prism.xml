            android:layout_height="wrap_content"
            android:layout_marginLeft="3.3dp"
            android:layout_marginRight="2.6dp"
            android:textColor="#000000"
            android:textSize="16.6dp" />

        <ImageView
            android:id="@+id/imgInsideHumiIcon"
            android:layout_width="7.3dp"
            android:layout_height="6dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/free_main_out_hum" />
    </LinearLayout>


    <!-- ikHwang 2019-06-10 메인화면 센서 정보 있음, 디폴트화면 -->
