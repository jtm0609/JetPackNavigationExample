        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_rc_state"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/main_img_fan_off"
            android:scaleType="fitXY"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/layoutConnectingSensor"/>

        <LinearLayout
            android:id="@+id/layoutConnectingSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/base_uv"
            app:layout_constraintHorizontal_chainStyle="packed">

            <TextView
                android:id="@+id/txt_rc_state1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/HomeFirstFragment_str_3"
                android:textColor="@color/control_off_normal"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txt_rc_state2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/HomeFirstFragment_str_3"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_uv"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/layoutConnectingSensor"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="13dp"
                android:background="@color/main_power_on"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/text_uv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_uv_on"
                android:textColor="@color/color_white"
                android:text="@string/HomeFirstFragment_str_7"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

